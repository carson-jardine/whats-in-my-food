<h2><%= @total_results %> Results</h2>

<% @foods.each do |food| %>
  <ul class="food">
    <li class="code"> <b>GTIN/UPC Code: </b> <%= food.code %></li>
    <li class="description"> <b>Description: </b> <%= food.description.capitalize! if food.description %></li>
    <li class="brand_owner"> <b>Brand: </b>  <%= food.brand_owner %></li>
    <li class="ingredients"> <b>Ingredients: </b> <%= food.ingredients.capitalize! if food.ingredients %></li>
  </ul>
<% end %>
