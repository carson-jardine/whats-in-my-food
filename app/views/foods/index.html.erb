<h2><%= @json[:totalHits] %> Results</h2>

<% @foods.each do |food| %>
  <ul class="food">
    <li class="code"> <b>GTIN/UPC Code: </b> <%= food[:gtinUpc] %></li>
    <li class="description"> <b>Description: </b> <%= food[:description].capitalize! %></li>
    <li class="brand_owner"> <b>Brand: </b>  <%= food[:brandOwner] %></li>
    <li class="ingredients"> <b>Ingredients: </b> <%= food[:ingredients].capitalize! %></li>
  </ul>
<% end %>
